---
import Layout from '@layouts/blogs/Layout.astro'
import { type Blog, getBlogDetail, getBlogs } from '@library/microcms'
import '@styles/blog.css'
import { format } from 'date-fns'

// 詳細記事ページの全パスを取得
export async function getStaticPaths() {
  const response = await getBlogs({ fields: ['id'] })
  return response.contents.map((content: Blog) => ({
    params: {
      slug: content.id,
    },
  }))
}

//記事の詳細情報を取得
const { slug } = Astro.params
const blog = await getBlogDetail(slug as string)
---

<Layout title="My first blog with Astro">
  <main class="container">
    <h1 class="title">{blog.title}</h1>
    <p class="publishedAt">公開日時：{format(blog.publishedAt, "yyyy-MM-dd")}</p>
    <div class="blog-post-meta">
      {blog.tags.map((tag) => (
        <span class:list={["blog-post-tag"]} data-key={tag.id}>
          {`#${tag.name}`}
        </span>
      ))}
    </div>
    <div id="post" set:html={blog.content}></div>
  </main>
</Layout>

<style is:global>
  .container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
  }
  .blog-post-meta {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }
  .blog-post-tag {
    width: fit-content;
    background-color: #ddd;
    padding: 4px 8px;
    font-size: .8rem;
    border-radius: 4px;
  }
  #post {
    width: 720px;
  }
  #post > figure img{
    max-width: 100%;
    height: auto;
  }
</style>